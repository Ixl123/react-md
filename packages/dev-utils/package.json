{
  "name": "@react-md/dev-utils",
  "version": "2.0.0-beta.0",
  "description": "Common build utilities for react-md. Contains helpers for building, watching, testing, etc",
  "private": true,
  "bin": {
    "dev-utils": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf bin dist",
    "executable": "if [[ ! -x \"bin/cli.js\" ]]; then chmod +x bin/cli.js; fi",
    "compile": "tsc",
    "build": "npm-run-all compile executable",
    "watcher": "chokidar \"bin/cli.js\" -c \"npm run executable\"",
    "watch": "npm-run-all -p \"compile -w\" watcher"
  },
  "dependencies": {
    "chokidar": "^3.4.0",
    "commander": "^5.1.0",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "filesize": "^6.1.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "gzip-size": "^5.1.1",
    "he": "^1.2.0",
    "lodash": "^4.17.15",
    "loglevel": "^1.6.8",
    "markdown-toc": "^1.2.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.29",
    "postcss-combine-duplicated-selectors": "^8.1.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-sorting": "^5.0.1",
    "prettier": "^2.0.5",
    "pretty-ms": "^7.0.0",
    "rimraf": "^3.0.2",
    "sassdoc": "^2.7.1",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@types/cssnano": "^4.0.0",
    "@types/he": "^1.1.1",
    "chokidar-cli": "^2.1.0"
  }
}
